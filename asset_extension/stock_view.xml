<openerp>
	<data>

        <record id="view_location_asset_form" model="ir.ui.view">
            <field name="name">stock.location.asset.form</field>
            <field name="model">stock.location</field>
			<field name="inherit_id" ref="stock.view_location_form"/>
            <field name="arch" type="xml">
				<separator string="Additional Information" position="before">
					<group col="4" string="Location" attrs="{'invisible': [('usage','!=','asset')]}">
						<field name="country" on_change="onchange_country(country)"/>
						<field name="island"/>
						<field name="county" attrs="{'invisible':[('country_code','=','CV')]}"/>
						<field name="city" attrs="{'invisible':[('country_code','=','CV')]}"/>
						<field name="county_id" attrs="{'invisible':['|', ('country_code','!=','CV'),('country_code','=',False)]}" on_change="onchange_county(county_id)"/>
						<field name="city_id" attrs="{'invisible':['|',('country_code','!=','CV'), ('country_code','=',False)]}" on_change="onchange_city(city_id)"/>
						<field name="street"/>
						<field name="zip"/>
						<field name="country_code" invisible="1"/>
					</group>
					<group col="5">
						<button name="geo_localize" type="object" string="GeoLocalize" icon="color-picker"/><newline/>
						<field name="latitude" readonly="1"/>
						<field name="longitude" readonly="1"/>
					</group>
				</separator>
				<field name="location_id" position="replace">
					<field name="location_id" on_change="onchange_location_id(location_id)"/>
				</field>
			</field>
		</record>

	</data>
</openerp>
